<% include ../partials/header %>
<form action= "/user/update" method="post">

<div class="form-group">
  <label for="">ID</label>
  <input type="number"
    class="form-control" value = "<%= user.id %>" name="id" id="" aria-describedby="helpId" placeholder="">
  <small id="helpId" class="form-text text-muted">user ID</small>
</div>

<div class="form-group">
  <label for="">Email</label>
  <input type="text"
    class="form-control"  value = "<%= user.email %>" name="email" id="email" aria-describedby="helpId" placeholder="">
  <small id="helpId" class="form-text text-muted">Email</small>
</div>

<div class="form-group">
  <label for="">Password</label>
  <input type="number"
    class="form-control" value = "<%= user.password %>" name="password" id="password" aria-describedby="helpId" placeholder="">
  <small id="helpId" class="form-text text-muted">Password</small>
</div>
<button type="submit" class="btn btn-warning">Cancel</button>
<button type="submit" class="btn btn-primary">Save</button>

</form>
<% include ../partials/footer %>