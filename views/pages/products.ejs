        </thead>
        <tbody id="myTable">
        
        
    <% products.forEach(function(product){ %>
    
            <tr>
                <td scope="row"><%= product.id %></td>
                <td><%= product.title %></td>
                 <td><%= product.price %></td>
                
                <td><a  class="btn btn-primary" href="/products/<%= product.id %>" role="button">Edit</a></td>
                <td><a  class="btn btn-danger" href="/product_delete/<%= product.id %>" role="button">Delete</a></td>
                

            </tr>
            
                
            
            <% }); %>
        </tbody>
    
    </table>
<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>
