<% include ../partials/header %>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Password</th>
            <th>Edit</th> 
            <th>Delete</th>
            <th><a name="" user_id="" class="btn btn-success" href="/insert_user" role="button">Add New</a></td></th>
        </tr>
    </thead>
    <tbody user_id="myTable">

     <% users.forEach(function(user){ %>
        <tr>
            <td scope="row"><%= user.user_id %></td>
            <td><%= user.email %></td>
            <td><%= user.password %></td>
            <td><a  class="btn btn-primary" href="/users/<%= user.user_id %>" role="button">Edit</a></td>
            <td><a  class="btn btn-danger" href="/user_delete/<%= user.user_id %>" role="button">Delete</a></td>
        </tr>
      
        <% }); %>
    </tbody>
</table>
<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>


