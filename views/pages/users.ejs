<table class="table">
    <thead>
         <tr class="text-white bg-dark">
            <th>ID</th>
            <th>Email</th>
            <th>Password</th>
            <th>Edit</th> 
            <th>Delete</th>
            <th><a name="" id="" class="btn btn-success" href="/insert_user" role="button">Add New</a></td></th>
        </tr>
    </thead>
    <tbody id="myTable">

     <% users.forEach(function(user){ %>
        <tr>
            <td scope="row"><%= user.id %></td>
            <td><%= user.email %></td>
            <td><%= user.password %></td>
            <td><a  class="btn btn-primary" href="/users/<%= user.id %>" role="button">Edit</a></td>
            <td><a  class="btn btn-danger" href="/user_delete/<%= user.id %>" role="button">Delete</a></td>
        </tr>
      
        <% }); %>
    </tbody>
</table>
<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>
